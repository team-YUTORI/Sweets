

  <table class="table">
    <tbody>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.without_tax_price.floor * 1.1).floor %></td>
        <td><%= cart_item.item_number %></td>
        <td><%= cart_item.item.without_tax_price %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
