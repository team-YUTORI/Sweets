<div class="container">
  <div class="row">
    <h2>注文情報確認</h2>
    <div class="col-md-8">
      <thead>
        <th>
          商品名
        </th>
        <th>
          単価(税込)
        </th>
        <th>
          数量
        </th>
        <th>
          小計
        </th>
      </thead>
      <% @cart_items.items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
              <%= cart_item.item_image_id %>
            </td>
            <td>
              <%= cart_item.item.name %>
            </td>
          </tr>
          <td>
            <%= cart_item.without_tax_price * 1.1 %>
          </td>
          <td>
            <%= @cart_items.item_number %>
          </td>
          <td>
            <%= @cart_items.item_number * cart_item.without_tax_price * 1.1 %>
          </td>
        </tbody>
      <% end %>
    </div>
    <div class="col-md-4">
      <% @cart_items.items.each do |item| %>
        <table>
          <tbody>
            <tr>
              <th>
                配送料</th>
              <td>
                <%= (配送料) %></td>
            </tr>
            <tr>
              <th>
                商品合計</th>
              <td>
                <% sum = 0 %>
                <% sum = sum + @cart_items.item_number * item.without_tax_price * 1.1 %>
                <%= sum %></td>
            </tr
            <tr>
              <th>
                請求金額</th>
              <td>
                <% sum %>
                <% sum = sum + (配送料) %>
                <%= sum %></td>
            </tr>
          </tbody>
          </table>
        <% end %>
    </div>

