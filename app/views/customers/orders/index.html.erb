<div class="container">
  <div class="row">
    <div class="col-md-12">

      <table class="table table-hover">
        <thead>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead>
        <% @orders.each do |order| %>
        <% order.order_details.each do |order_detail| %>
            <tbody>
              <tr>
                <td><%= order.updated_at %></td>
                <td><%= order.address %></td>
                <td><%= order_detail.item.name %></td>
                <td><%= order.price %></td>
                <td><%= order.order_status%></td>
                <td><%= link_to order_path(order.id) , class: 'btn-btndefault' do %>
                表示する
                <% end%></td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>

    </div>
  </div>
</div>
