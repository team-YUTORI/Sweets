
  <table class="table">
  	<thead>
   		<tr>
   			<th>ジャンル検索</th>
   		</tr>
   	</thead>
   	<tbody>
      <% @genres.each do |genre| %>
 			<tr>
 				<td>
					<%= link_to items_genre_path(genre.id) do %>
 					<%= genre.name %>
					<% end %>
 				</td>
 			</tr>
      <% end %>
   	</tbody>
  </table>


  <%= form_for(@item) do |f| %>
   <% if @item.item_image_id? %>
      <%= image_tag @item.item_image_id.url %>
   <% else %>
      <%= image_tag "/assets/default.jpg", :size => '100x100' %>
   <% end %>
  <% end %>

      <%= @item.name %>
      <%= @item.description %>
      ¥<%= @tax.floor.to_s(:delimited, delimiter: ',') %>(税込)   <%# 税込み価格を表示。floorで小数点以下を切り捨て %>


       <%= form_for(@item_number, url:carts_items_path) do |f| %>
         <%= f.number_field :item_number, min: 1, max: 10, step:1, placeholder:"個数選択" %>   <%# 個数選択のファーム（1〜10まで選べる) %>
         <%= f.submit "カートに入れる" %>
       <% end %>
