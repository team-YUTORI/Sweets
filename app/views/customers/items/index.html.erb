

	<table class="table">
		<thead>
 			<tr>
 				<th>ジャンル検索</th>
 			</tr>
 		</thead>

 		<tbody>
 			<% @genres.each do |genre| %>
 				<tr>
 					<td>
						<%= link_to items_genre_path(genre.id) do %>
 						<%= genre.name %>
						<% end %>
 					</td>
 				</tr>
      <% end %>



			 <% if params[:id] %>
					<%= @genre.name %>
			 <% else %>
					<h3>全て</h3>
			 <% end %>


			（全<%= @items.count %>件）<%# 検索件数を表示 %>


      <% @items.each do |item| %>
 				<tr>
 					<td>
						<%= image_tag item.item_image_id.url %>
						<%= link_to item_path(item.id) do %>
 							<%= item.name %>
						<% end %>
            ¥<%= item.without_tax_price %>
 				  </td>
 			  </tr>
 			<% end %>

 		</tbody>
	</table>

	<%= paginate @item_page, class: "paginate" %>
