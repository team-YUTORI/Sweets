

	<table class="table">
		<thead>
 			<tr>
 				<th>ジャンル検索</th>
 			</tr>
 		</thead>
 		<tbody>
 			<% @genres.each do |genre| %>
 			<tr>
 				<td>
 					<%= genre.name %>
 				</td>
 			</tr>
      <% end %>
      <h1><%= @genre.name %></h1>（全<%= @item.total_count %>件）<%# 検索件数を表示 %>
      <% @items.each do |item| %>
 			<tr>
 				<td>
          <%= attachment_image_tag @item_image, :image_image, %>
 					<%= item.name %>
          ¥<%= item.without_tax_price %>
 				</td>
 			</tr>
 			<% end %>
      <%= paginate @item, class: "paginate" %>
 		</tbody>
	</table>
