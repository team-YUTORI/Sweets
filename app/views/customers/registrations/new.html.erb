<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<%# last_nameカラムの追加 %>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, placeholder:"姓"%>
  </div>
<%# first_nameカラムの追加 %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, placeholder:"名" %>
  </div>
<%# last_kanaカラムの追加 %>
  <div class="field">
    <%= f.label :last_kana %><br />
    <%= f.text_field :last_kana, placeholder:"カナ姓" %>
  </div>
<%# first_nameカラムの追加 %>
  <div class="field">
    <%= f.label :first_kana %><br />
    <%= f.text_field :first_kana, placeholder:"カナ名" %>
  </div>
<%# postal_codeカラムの追加 %>
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code,maxlength:10, placeholder:"郵便番号" %>
  </div>
  <%# postal_codeカラムの追加 %>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, placeholder:"住所" %>
  </div>

<%# phone_numberカラムの追加 %>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, placeholder:"電話番号" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" ,placeholder:"メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
