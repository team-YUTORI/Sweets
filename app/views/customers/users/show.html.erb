
<div class="container">
  <div class="row">
    <h2>マイページ</h2>
    <h2>登録情報</h2>
    <%= link_to "編集", edit_user_path(@user), class: "btn btn-warning" %>
    <%= link_to "パスワード変更する", "#", class: "btn btn-info" %>
  </div>

  <div class="row">
    <div class="col-md-5">
    <table class="table table-bordered table-hover">
      <tbody>
        <tr>
          <td class="active">氏名</td>
          <td>
            <%= @user.last_name %>
            <%= @user.first_name %>
          </td>
        </tr>
        <tr>
          <td class="active">カナ</td>
          <td>
            <%= @user.last_kana %>
            <%= @user.first_kana %>
          </td>
        </tr>
        <tr>
          <td class="active">郵便番号</td>
          <td><%= @user.postal_code %></td>
        </tr>
        <tr>
          <td class="active">住所</td>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <td class="active">電話番号</td>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <td class="active">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="row">
    <h4>配送先</h4><%= link_to "一覧を見る", delivery_addresses_path, class: "btn btn-success col-md-2" %>
  </div>
  <div class="row">
    <h4>注文履歴</h4><%= link_to "一覧を見る", orders_path, class: "btn btn-success col-md-2" %>
  </div>
</div>
