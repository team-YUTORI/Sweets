
<h3>配送先編集</h3>

  

  <%= form_for(@delivery) do |f| %>
		<div class="field row">
			<label for="postal_code">郵便番号</label>
			<%= f.text_field :postal_code, class: "col-xs-12" %>
		</div>

		<div class="field row">
			<label for="address">住所</label>
			<%= f.text_field :address, class: "col-xs-12" %>
		</div>

    <div class="field row">
			<label for="name">宛名</label>
			<%= f.text_field :name, class: "col-xs-12" %>
		</div>

		<div class="actions row">
			<%= f.submit "編集する", class: "btn btn-primary col-xs-12" %>
		</div>
  <% end %>
