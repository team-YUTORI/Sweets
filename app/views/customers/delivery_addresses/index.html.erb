
<h3>配送先登録/一覧</h3>

<!-- サクセスメッセージ -->
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<!-- エラー文 -->
<% if @delivery.errors.any? %>
	<div id="error_explanation">
		<h2><%= @delivery.errors.count %>件のエラーがありますよ〜。</h2>
    	<ul>
      	<% @delivery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      	<% end %>
   		</ul>
   </div>
<% end %>


<div class="container">
  
  <!-- 配送先登録 -->
  <%= render 'new', delivery: @delivery %>

  <!-- 配送先一覧 -->
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th class="active col-md-1">郵便番号</th>
        <th class="active col-md-3">住所</th>
        <th class="active col-md-1">宛名</th>
        <th class="active col-md-2" colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @deliverys.each do |del| %>
        <tr>
          <td><%= del.postal_code %></td>
          <td><%= del.address %></td>
          <td><%= del.name %></td>
          <td><%= link_to '編集する', edit_delivery_address_path(del), class: "btn btn-info" %>
          <%= link_to '削除する', delivery_address_path(del), method: :delete, "data-confirm" => '本当に削除しますか?', class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- 配送先一覧ここまで -->
</div>
