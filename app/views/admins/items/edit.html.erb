

  <h1>商品　編集画面</h1>


  <%= form.for(@items, url: admins_items_path) do |f| %>


  <% if @items.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @items.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <%= image_tag @items.image.url %>
  <%= f.file_field :image, placeholder: "画像選択" %>


  <table class="table">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name  %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id, Genre.all.map { |genre| [genre.name,genre.id] } %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :without_tax_price %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= f.select :sale_status, [['販売中', 0], ['売切れ', 1]] %></td>
      </tr>
    </tbody>
  </table>

  <%= f.submit "変更を保存" %>

  <% end %>
