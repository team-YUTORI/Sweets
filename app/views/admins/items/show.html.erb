

  <h1>商品 詳細画面</h1>


  <%= attachment_image_tag item, :item_image, :fill, 100,100, format:'jpeg', fallback: "no_image.jpg" %>


  <table class="table">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= item.description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= genre.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= tax.floor %>(<%= item.without_tax_price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= item.sale_status %></td>
      </tr>
    </tbody>
  </table>


  <%= link_to "編集する", edit_item_path %>
