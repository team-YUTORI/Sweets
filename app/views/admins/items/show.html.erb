

  <h1>商品 詳細画面</h1>


  <%= image_tag @items.image.url %>


  <table class="table">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @items.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @items.description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= genre.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= tax.floor(@items.price) %>(<%= without_tax_price(@items.price) %>)</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= @items.sale_status %></td>
      </tr>
    </tbody>
  </table>


  <%= link_to "編集する", edit_item_path %>
