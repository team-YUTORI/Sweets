<div class="container">
  <div class="row">
    <h2>商品 詳細画面</h2>
  </div>
  <div class="row">
    <div class="col-md-5">
      <%= attachment_image_tag @item, :item_image, size: "300x250"%>
    </div>
    <div class="col-md-4">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><h4><%= @item.name %></h4></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><h4><%= @item.description %></h4></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><h4><%= @genre.name %></h4></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td><h4><%= @tax.floor.to_s(:delimited, delimiter: ',') %>  (<%= @item.without_tax_price.to_s(:delimited, delimiter: ',') %>)円</h4></td>
            <!-- floorで小数点以下を切り捨てて、:delimited, delimiter: ','で表示される金額に３桁ずつ[,]を入れるようにした -->
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.sale_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
      <%= link_to "編集する", edit_admins_item_path, class: "btn btn-info btn-md"%>
      <%= link_to "削除する", admins_item_path, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%>
    </div>
  </div>
</div>
