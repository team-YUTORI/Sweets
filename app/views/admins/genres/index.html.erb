<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>

    <div class="col-xs-9">
      <h2>ジャンル追加・一覧画面</h2>

      <%= form_with(model: @genre, url: admins_genres_path, local: true) do |form| %>
        <%= form.text_field :name %>
        <%= form.radio_button :on_display, :true %>
        <%= form.label :on_display, "有効", {value: :true, style: "display: inline-block;"} %>
        <%= form.radio_button :on_display, :false %>
        <%= form.label :on_display, "無効", {value: :false, style: "display: inline-block;"} %>
        <%= form.submit 'Create Genre' %>
      <% end %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>

        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= link_to edit_admins_genre_path(genre.id) do%><%= genre.name %>
                <% end %>
              </td>
              <td>
              <%= on_display(genre) %>
              </td>
              <td>
                <%= link_to"Edit" , edit_admins_genre_path(genre.id) %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
</div>
</div>
</div>
