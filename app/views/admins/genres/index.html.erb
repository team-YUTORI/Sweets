<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h2>ジャンル追加・一覧画面</h2>

      <%= form_with(model: @genre, url: admins_genres_path, local: true) do |form| %>
        <h4>ジャンル
          <span>
            <%= form.text_field :name %>
            <%= form.radio_button :on_display, :true %>
            <%= form.label :on_display, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= form.radio_button :on_display, :false %>
            <%= form.label :on_display, "無効", {value: :false, style: "display: inline-block;"} %>
            <%= form.submit '追加', class: "btn btn-info btn-sm"%>
          <% end %>
        </span>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
              <% if genre.on_display == true %>
                有効
              <% else %>
                無効
              <% end %>
              </td>
              <td>
                <%= link_to edit_admins_genre_path(genre.id),class:'btn btn-primary btn-sm' do %>
                <span>編集する</span>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
