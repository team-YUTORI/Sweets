<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <%= form_for(@genre, url: admins_genre_path) do |f| %>

      <h2>ジャンル編集画面</h2>

      <h4>ジャンル</h4>
      <%= f.text_field :name %>
      <%= f.radio_button :on_display, :true %>
      <%= f.label :on_display, "有効", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :on_display, :false %>
      <%= f.label :on_display, "無効", {value: :false, style: "display: inline-block;"} %>
      <%= f.submit '変更を保存する' %>
       <% end %>
</div>
</div>
</div>
