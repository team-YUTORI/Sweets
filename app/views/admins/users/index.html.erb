
<div class="container">
  <div class="row">
    <h2>会員一覧画面</h2>
  </div>
  <div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @users.each do |customer|%>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admins_user_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.deleted_at == nil%>
                有効
              <% else %>
                退会済
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <%= paginate @user, class: "paginate" %>
</div>
