
<div class="container">

<h1>登録情報編集</h1>

<%= form_for @user, url: admins_user_path do |f| %>
  <table class="table">
  <tbody>
    <tr>
      <td>会員ID </td>
      <td><%= @user.id %></td>
    </tr>

    <tr>
      <td>氏名</td>
      <td>
        <%= f.text_field :last_name, placeholder:"苗字"  %>
        <%= f.text_field :first_name , placeholder:"名前" %>
      </td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :last_kana, placeholder:"フリガナ（苗字）" %>
        <%= f.text_field :first_kana, placeholder:"フリガナ（名前）" %>
      </td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td>
        <%= f.text_field :postal_code, placeholder:"郵便番号" %>
      </td>
    </tr>

    <tr>
      <td>住所</td>
      <td>
        <%= f.text_field :address, placeholder:"住所" %>
      </td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td>
        <%= f.telephone_field :phone_number, placeholder:"電話番号" %>
      </td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td>
        <%= f.email_field :email, placeholder:"メールアドレス"%>
      </td>
    </tr>

    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :deleted_at,:nil %>
        <%#有効ボタンを押して保存したら、値にnilを返して有効ユーザーになる %>
        <%=f.label :deleted_at, "有効", {value: :nil, style:"display: inline-block;"} %>
        <%#退会済みボタンを押したて保存したら、値に今の時間を返して、論理削除される %>
        <%= f.radio_button :deleted_at, Time.now %>
        <%=f.label :deleted_at, "退会済み", { style:"display: inline-block;"} %>
      </td>
    </tr>

  </tbody>
</table>
<div class="action">
    <%= f.submit '変更を保存する', class: "btn btn-info" %>
</div>

<% end %>

</div>
