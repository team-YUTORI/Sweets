<h2>会員詳細画面</h2>

<table class="table">
  <tbody>
    <tr>
      <td>会員ID </td>
      <td>
        <%= @user.id %>
        <% if @user.deleted_at == nil%>
          有効会員
        <% else %>
          退会済
        <% end %>
      </td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
        <%= @user.last_name %>
        <%= @user.first_name %>
      </td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td>
        <%= @user.last_kana %>
        <%= @user.first_kana %>
      </td>
    </tr>

    <tr>
      <td>郵便番号:</td>
      <td>
        <%= @user.postal_code %>
      </td>
    </tr>

    <tr>
      <td>住所</td>
      <td>
        <%= @user.address %>
      </td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td>
        <%= @user.phone_number %>
      </td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td>
        <%= @user.email %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admins_user_path(@user) %>
      
